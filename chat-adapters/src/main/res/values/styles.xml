<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="chat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#212121</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="chatbox" parent="chat">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:minWidth">100dp</item>
        <item name="android:padding">18dp</item>
        <item name="android:text">Chat message goes here...</item>
    </style>

    <style name="chatbox.incoming">
        <item name="android:background">@drawable/bg_chat_box_incoming</item>
    </style>

    <style name="chatbox.outgoing">
        <item name="android:background">@drawable/bg_chat_box_outgoing</item>
    </style>

    <style name="chatbox_space">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_weight">0</item>
        <item name="android:minWidth">100dp</item>
    </style>

    <style name="chat.text">
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="chat.time">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:alpha" tools:targetApi="honeycomb">.5</item>
    </style>

    <style name="chat.name">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">19sp</item>
    </style>
</resources>